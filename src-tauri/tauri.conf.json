{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pandocx",
  "version": "0.1.0",
  "identifier": "org.randynamic.pandocx",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "settings",
        "title": "Settings",
        "width": 600,
        "height": 400,
        "url": "settings.html",
        "visible": false,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
